  "version": "0.2.0",
  "configurations": [
    {
      "name": "linux (gdb)",
      "type": "cppdbg",
      "request": "launch",
      "targetArchitecture": "x64",
      "program": "${workspaceFolder}/build/main",
      "args": [],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}",
      "externalConsole": false,
      "internalConsoleOptions": "neverOpen",

      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
      // "preLaunchTask": "build_linux"
    },
    {
      "name": "win (gdb)",
      "type": "cppdbg",
      "request": "launch",
      "targetArchitecture": "x64",
      "program": "${workspaceFolder}/build/engine.exe",
      "args": [],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}",
      "externalConsole": false,
      "internalConsoleOptions": "neverOpen",

      "MIMode": "gdb",
      "miDebuggerPath": "C:\\TDM-GCC-64\\gdb64\\bin\\gdb.exe",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
      // "preLaunchTask": "build_linux"
    },
    {
      "name": "win test (gdb)",
      "type": "cppdbg",
      "request": "launch",
      "targetArchitecture": "x64",
      "program": "${workspaceFolder}/build/engine_test.exe",
      "args": [],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}",
      "externalConsole": false,
      "internalConsoleOptions": "neverOpen",

      "MIMode": "gdb",
      "miDebuggerPath": "C:\\TDM-GCC-64\\gdb64\\bin\\gdb.exe",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
      // "preLaunchTask": "build_linux"
    }
  ]
}
